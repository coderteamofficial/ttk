/*Links*/
.linker
    position relative
    display inline-block
    color #fff
    opacity 0.7
    text-decoration none
    transition all 0.3s ease-in-out
    &::before
        content ''
        absolute left bottom
        width 100%
        height 1px
        background #fff
        transition all 0.3s
    &:hover
        opacity 1
        &::before
            right 0
            left auto
            width 0
    &.noline
        &::before
            display none

/*button*/
.button
    position relative
    background none
    display inline-flex
    align-items center
    justify-content center
    color #fff
    border 1px solid #fff
    height 40px
    padding 0 2rem
    cursor pointer
    font-size 1em
    transition all 0.3s
    z-index 1
    &::before
        content ''
        position absolute
        right 0
        top 0
        width 0
        height 100%
        background $red
        transition all 0.3s
        z-index -1
    &:hover
        &::before
            left 0
            right auto
            width 100%
    &:active
        transform scale(0.95)
    &[disabled]
        pointer-events none
        opacity 0.5
    +below(480px)
        width 100%
        margin-top 1rem